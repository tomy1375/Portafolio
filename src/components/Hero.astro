  <script type="module">
    import { gsap } from 'https://cdn.skypack.dev/gsap';
  
    function initAnimation() {
      gsap.set(['.name', 'h1', 'h2'], { y: 100, opacity: 0, visibility: 'hidden' });
  
      gsap.to(['.name', 'h1', 'h2'], {
        opacity: 1,
        y: 0,
        visibility: 'visible',
        ease: 'power3.out',
        duration: 1.5,
        stagger: 0.3,
        delay: 0.2,
      });

    
      gsap.to('.hand-icon', {
        rotation: 360,
        repeat: -1,
        ease: 'none',
        duration: 10,
        transformOrigin: '70% 70%',
      });
    }
  
    document.addEventListener('DOMContentLoaded', initAnimation);
</script>

